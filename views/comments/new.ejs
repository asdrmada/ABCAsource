<% include ../partials/header %>

<div class="container new-form"></div>

          <div class="card my-4">
            <h5 class="card-header">Leave a Comment:</h5>
            <div class="card-body">
              <form action="/blog/<%= blog._id %>/comments" method="POST">
                <div class="form-group">
                  <h6>Name:</h6>
                  <textarea class="form-control" rows="1" name="comment[name]"></textarea>
                </div>
                <div class="form-group">
                  <h6>Comment:</h6>
                  <textarea class="form-control" rows="3" name="comment[body]"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </div>
          </div>
          
</div>

<% include ../partials/footer %>